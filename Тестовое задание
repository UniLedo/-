#include <iostream>
#include <vector>

using namespace std;

void Merge(vector<int>& A, int p, int q, int r) {
    int n1 = q - p + 1;
    int n2 = r - q;

    vector<int> L(n1), R(n2);

    for (int i = 0; i < n1; ++i) {
        L[i] = A[p + i];
    }

    for (int j = 0; j < n2; ++j) {
        R[j] = A[q + 1 + j];
    }

    int i = 0, j = 0, k = p;

    while (i < n1 && j < n2) {
        if (L[i] <= R[j]) {
            A[k] = L[i];
            ++i;
        } else {
            A[k] = R[j];
            ++j;
        }
        ++k;
    }

    while (i < n1) {
        A[k] = L[i];
        ++i;
        ++k;
    }

    while (j < n2) {
        A[k] = R[j];
        ++j;
        ++k;
    }
}

int main() {
    int n;
    cout << "Введите кол-во элементов в массиве: ";
    cin >> n;

    vector<int> A(n);
    cout << "Введите " << n << " элементов287146: ";
    for (int i = 0; i < n; ++i) {
        cin >> A[i];
    }

    int p = 0;
    int r = n - 1;
    int q = (p + r) / 2;

    Merge(A, p, q, r);

    cout << "Отсортированный массив: ";
    for (int num : A) {
        cout << num << " ";
    }
    cout << endl;

    return 0;
}
